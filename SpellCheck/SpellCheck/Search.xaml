<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpellCheck.Search"
             Title="Search">
    <ContentPage.Content>
        <Label Text="Search" VerticalOptions="Center" HorizontalOptions="Center" />
    </ContentPage.Content>
    <StackLayout Margin="20" Orientation="Vertical">
        <SearchBar x:Name="searchBar" Placeholder="Enter the word you want to search for" 
                   FontSize="Small" SearchButtonPressed="searchBar_SearchButtonPressed" />
        <Button x:Name="clear" Text="Clear" Clicked="clearHistory" IsVisible="False" />
        <ProgressBar x:Name="progress" IsVisible="False" IsEnabled="True" />
        <ListView x:Name="searchedWord" HasUnevenRows="True" SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding word}" HorizontalTextAlignment="Center" Margin="0,0,0,0" />
                            <Label Text="{Binding corrected}" HorizontalTextAlignment="Center" Margin="0,0,0,20" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>    
</ContentPage>