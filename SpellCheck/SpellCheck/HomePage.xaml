<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpellCheck.HomePage"
             Title="Home Page">
    <ContentPage.Content>
        <Label Text="Home Page" VerticalOptions="Center" HorizontalOptions="Center" />
    </ContentPage.Content>
    <StackLayout Margin="20" Orientation="Vertical">
        <SearchBar x:Name="searchBar"
                   Placeholder="Enter word or phrase to spell check"
                   SearchButtonPressed="searchBar_SearchButtonPressed"
                   FontSize="Small" />
        <Label x:Name="correct" Text="Default" VerticalOptions="EndAndExpand" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>