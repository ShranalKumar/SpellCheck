<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpellCheck.HomePage"
             Title="Home Page">
    <ContentPage.Content>
        <Label Text="Home Page" VerticalOptions="Center" HorizontalOptions="Center" />
    </ContentPage.Content>
    <StackLayout Margin="20" Orientation="Vertical">
        <SearchBar x:Name="searchBar"
                   Placeholder="Enter word to spell check"
                   SearchButtonPressed="searchBar_SearchButtonPressed"
                   FontSize="Small" />
        <Label Text="Suggestions: " HorizontalOptions="Center" Margin="0,0,0,20" />
        <ProgressBar x:Name="progress" IsVisible="False" IsEnabled="True" />
        <ListView x:Name="Suggesting" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label x:Name="suggested" Text="{Binding word}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>    
</ContentPage>