<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpellCheck.History"
             Title="History">
    <ContentPage.Content>
        <Label Text="History Page" VerticalOptions="Center" HorizontalOptions="Center" />        
    </ContentPage.Content>
    <StackLayout Margin="20" Orientation="Vertical">
        <Button Text="Retrieve word history" Clicked="getHistory" />
        <Button Text="Clear" Clicked="clearHistory" />
        <ListView x:Name="WordList" HasUnevenRows="True" SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" >
                            <Label Text="{Binding word , StringFormat='Searched: {0}'}" Margin="0,0,0,0" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding corrected , StringFormat='Correction: {0}'}" Margin="0,0,0,20" HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>