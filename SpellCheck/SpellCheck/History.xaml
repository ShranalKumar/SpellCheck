<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpellCheck.History"
             Title="History">
    <ContentPage.Content>
        <Label Text="History Page" VerticalOptions="Center" HorizontalOptions="Center" />        
    </ContentPage.Content>
    <StackLayout Margin="20" Orientation="Vertical">
        <Button Text="Retrieve word history" Clicked="getHistory" />
        <ListView x:Name="WordList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding word}" Margin="0,0,20,0" HorizontalTextAlignment="Start"/>
                            <Label Text="{Binding wordDescription}" Margin="20,0,0,0" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>